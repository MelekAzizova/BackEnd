@model MessageUpdateVM
@{
    ViewData["Title"] = "Update";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control">
        <span asp-validation-for="Subject" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Messages"></label>
        <input asp-for="Messages" class="form-control">
        <span asp-validation-for="Messages" class="form-text text-muted"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

