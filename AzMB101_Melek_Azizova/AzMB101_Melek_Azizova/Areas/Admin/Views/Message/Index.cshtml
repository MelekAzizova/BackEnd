@model List<MessageListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Message</h6>
        <a href="~/Admin/Message/Create" class="btn btn-primary">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Subject</th>
                        <th class="text-center">Message</th>
                        <th colspan="2" class="text-center">Actions</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                    <td class="text-center">@item.Id</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.Email</td>
                    <td class="text-center">@item.Subject</td>
                    <td class="text-center">@item.Messages</td>
                    <td class="text-center"><a class="btn btn-success" asp-controller="Message" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td class="text-center"><a class="btn btn-success" asp-controller="Message" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>


